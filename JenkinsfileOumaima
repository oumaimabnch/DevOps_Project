pipeline {
  agent any 
   

  stages {
  

    
   

    
    
  
     stage ('MNV BUILD') {
      steps {
         echo 'before Build stage done'
        sh 'mvn clean package'
        echo 'after Build stage done'
      }
    }
    
    
       stage ('MVN COMPILE') {
      steps {
        sh 'mvn compile'
        echo 'compile stage done'

      }
    }
  
    
    stage ('JUNIT+MOCK') {
      steps {
        sh 'mvn test'
      }
    }
    
    
    stage ('STATIC TEST WITH SONAR') {
       steps {
       withSonarQubeEnv('sq') { 
                sh 'mvn sonar:sonar'
        }
      }
    }
  
  stage ('NEXUS DEPLOY') {
       steps {
       sh 'mvn deploy -DskipTests'
        
      }
    }
  
    
    
    
    
    
    
    
  
 }
}
